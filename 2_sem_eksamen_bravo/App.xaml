<Application x:Class="_2_sem_eksamen_bravo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:_2_sem_eksamen_bravo"
             xmlns:views="clr-namespace:_2_sem_eksamen_bravo.Views"
             xmlns:viewmodels="clr-namespace:_2_sem_eksamen_bravo.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:CustomerViewModel}">
            <views:CustomerView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:MessagesViewModel}">
            <views:MessagesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:SendMessageViewModel}">
            <views:SendMessageView/>
        </DataTemplate>
    </Application.Resources>
</Application>
